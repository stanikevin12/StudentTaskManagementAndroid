<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:label="Student Task Management"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentTaskManagement">

        <!-- MAIN / LAUNCHER ACTIVITY -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.StudentTaskManagement.Splash">


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TASK MANAGEMENT -->
        <activity android:name=".activities.AddTaskActivity" />
        <activity android:name=".activities.EditTaskActivity" />
        <activity android:name=".activities.TaskDetailActivity" />

        <!-- STUDY SESSION -->
        <activity android:name=".activities.StudySessionActivity" />

    </application>

</manifest>